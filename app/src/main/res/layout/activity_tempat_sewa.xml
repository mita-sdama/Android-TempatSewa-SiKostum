<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".TempatSewaActivity">
    <ScrollView
        android:id="@+id/kelola_tempat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/idTempat"
            android:layout_width="86dp"
            android:visibility="gone"
            android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/fotoTempat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="1dp"
            android:scaleType="centerCrop"
            android:cropToPadding="true"
            android:src="@drawable/splash_toko"/>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#81DAEE"
        app:cardCornerRadius="10dp">

        <TextView
            android:id="@+id/idAlamatku"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/namaTempat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="5dp"
            android:text="Nama Tempat Sewa"
            android:textColor="#ffffff"
            android:textSize="14sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#C8EDF8"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text="No Rekening : "
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/noRekening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="5dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#C8EDF8"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:text="Alamat : "
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/alamatTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:gravity="center|start"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#C8EDF8"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:text="Slogan : "
            android:textColor="#000000"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/sloganTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:gravity="center|start"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#C8EDF8"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:text="Deskripsi : "
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/deskripsiTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:gravity="center|start"
            android:text=""
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#C8EDF8"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:text="Status : "
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/statusTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:gravity="center|start"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#C8EDF8"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:text="Izin : "
            android:textColor="#000000"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/izinTempat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:padding="5dp"
            android:gravity="center|start"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="10dp">

        <Button
            android:id="@+id/buttonEditTempat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="#03A9F4"
            android:text="Edit"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/buttonInsertTempat"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="#03A9F4"
            android:text="Kelola Tempat Sewa"
            android:layout_margin="2dp"
            android:visibility="gone"
            android:textColor="@android:color/white" />

    </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>