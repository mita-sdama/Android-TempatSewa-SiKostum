<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvIdTempat"
        android:visibility="gone"
        android:hint="Id tempat"
        />
    <TextView
        android:id="@+id/tvIdKostum"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ID kostum"
        />

    <TextView
        android:id="@+id/tvIdKategori"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Id Kategori" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical"
        android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


            <ImageView
                android:id="@+id/rFoto_kostum"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/splash_toko" />


    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nama : "/>

                <TextView
                    android:id="@+id/tRnamaKostum"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:hint="Nama Kostum" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah : "/>

                <TextView
                android:id="@+id/tvRJumlah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Jumlah Kostum" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga : "/>


                <TextView
                android:id="@+id/tRHargaKostum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Harga Kostum" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi : "/>

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tRDeskripsi"
                    android:paddingBottom="5dp"
                android:hint="Deskripsi"/>
            </LinearLayout>



            <Button
                android:id="@+id/bRHapus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/rFoto_kostum"
                android:background="#F44336"
                android:textColor="#ffffff"
                android:text="Hapus"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>